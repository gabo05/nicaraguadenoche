<!DOCTYPE html>
<html>
    <head>
        <title><%= 'Nicaragua de Noche' +(typeof title == 'undefined' ? '' : ' | '+title) %></title>

        <!-- Viewport mobile tag for sensible mobile support -->
        <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

        <link rel="stylesheet" type="text/css" href="/js/dependencies/bootstrap/dist/css/bootstrap.min.css">
        <link rel="stylesheet" type="text/css" href="/js/dependencies/font-awesome/css/font-awesome.min.css">
        <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Oswald%3A400%2C500%2C700%7CPoppins%3A300%2C400%2C500%2C600%2C700&subset=latin%2Clatin-ext">
        <link rel="stylesheet" href="/styles/main.css">
        <link rel="stylesheet" href="/styles/media.css">
    </head>

    <body ng-app="ndnapp">
        <div class="ndn-page">
            <header class="ndn-header">
                <div class="container">
                    <div class="ndn-logo hidden-xs hidden-sm">
                        <img src="images/logo.png">
                    </div>
                    <nav id="ndnbar" class="ndn-navbar">
                        <div class="ndn-movil-menu hidden-md hidden-lg">
                            <a href="#" class="ndn-menu-icon" id="ndnmovilmenu">
                                <i class="fa fa-bars"></i>
                            </a>
                        </div>
                        <ul>
                            <li><a href="">Inicio</a></li>
                            <li><a href="">Cultural</a></li>
                            <li><a href="">M&uacute;sica</a></li>
                            <li><a href="">Eventos</a></li>
                            <li><a href="">Contactanos</a></li>
                        </ul>
                        <div class="ndn-logo hidden-lg hidden-md" id="ndnlogo">
                            <img src="images/logo.png">
                        </div>
                        <div class="ndn-searchbar" ng-controller="searchController">
                            <form id="ndnsearchform" ng-class="{'open' : status === 2}" ng-submit="search()">
                                <button type="button" ng-click="searchAction()"><i class="fa fa-search"></i></button>
                                <input type="text" ng-model="searchterm" id="ndnsearch">
                            </form>
                        </div>
                    </nav>
                </div>
            </header>
            <div class="container">
                <%- body %>
            </div>
            <footer>

            </footer>
        </div>
        <script src="/js/dependencies/jquery/dist/jquery.min.js"></script>
        <script type="text/javascript" src="/js/dependencies/angular/angular.min.js"></script>
        <script src="/js/dependencies/moment/min/moment.min.js"></script>
        <script src="/js/dependencies/underscore/underscore-min.js"></script>
        <script type="text/javascript" src="/js/app.js"></script>
        <script type="text/javascript" src="/js/app/main.js"></script>
        <script type="text/javascript" src="/js/app/controllers/search-controller.js"></script>
    </body>
</html>
