<div class="row" ng-controller="placeAdminController">
	<div class="col-xs-12" ng-if="view==1">
		<table class="table table-bordered table-hover">
			<thead>
				<tr>
					<td>Nombre</td>
					<td>Direcci&oacute;n</td>
					<td>Tel&eacute;fono</td>
					<td></td>
				</tr>
			</thead>
			<tbody>
				<tr ng-repeat="place in places">
					<td>{{place.name}}</td>
					<td>{{place.address}}</td>
					<td>{{place.phone}}</td>
					<td>
						<a href="/places/{{place.path}}" class="btn btn-primary"><i class="fa fa-eye"></i></a>
						<button class="btn btn-success" ng-click="edit(place)"><i class="fa fa-edit"></i></button>
						<button class="btn btn-danger" ng-click="actdect(place)"><i class="fa fa-thumbs-{{place.active?'down':'up'}}"></i></button>
					</td>
				</tr>
			</tbody>
		</table>
	</div>
	<div class="col-xs-12" ng-if="view==2">
		<form class="form-horizontal" ng-submit="create()">
			<button class="btn btn-primary" ng-click="newplace()">Nuevo</button>
			<div class="form-group">
				<label for="name" class="col-sm-2 control-label">Nombre</label>
				<div class="col-sm-10">
					<input type="text" ng-model="place.name" required class="form-control" id="name" placeholder="Nombre">
				</div>
			</div>
			<div class="form-group">
				<label for="description" class="col-sm-2 control-label">Descripci&oacute;n</label>
				<div class="col-sm-10">
					<textarea class="form-control" ng-model="place.description" required id="description" placeholder="Descripcion"></textarea>
				</div>
			</div>
			<div class="form-group">
				<label for="shortdesc" class="col-sm-2 control-label">Descripci&oacute;n Corta</label>
				<div class="col-sm-10">
					<input type="text" class="form-control" ng-model="place.shortdesc" id="shortdesc" placeholder="Descripcion">
				</div>
			</div>
			<div class="form-group">
				<label for="address" class="col-sm-2 control-label">Direcci&oacute;n</label>
				<div class="col-sm-10">
					<textarea class="form-control" ng-model="place.address" required id="address" placeholder="Direccion"></textarea>
				</div>
			</div>
			<div class="form-group">
				<label for="phone" class="col-sm-2 control-label">Tel&eacute;fono</label>
				<div class="col-sm-10">
					<input type="tel" class="form-control" ng-model="place.phone" required id="phone" placeholder="Telefono">
				</div>
			</div>
			<div class="form-group">
				<label for="longitude" class="col-sm-2 control-label">Longitud</label>
				<div class="col-sm-10">
					<input type="number" step="0.00001" ng-model="place.location.longitude" class="form-control" required id="longitude" placeholder="Longitud">
				</div>
			</div>
			<div class="form-group">
				<label for="latitude" class="col-sm-2 control-label">Latitud</label>
				<div class="col-sm-10">
					<input type="number" step="0.00001" ng-model="place.location.latitude" class="form-control" required id="latitude" placeholder="Latitud">
				</div>
			</div>
			<div class="form-group">
				<label for="filter" class="col-sm-2 control-label">Filtros</label>
				<div class="col-sm-10">
					<select class="form-control" ng-model="selected">
						<optgroup label="¿Qué quieres hacer?">
							<option value="eat">Comer</option>
							<option value="party">Bar o Disco</option>
							<option value="cultural">Cultural</option>
							<option value="hotel">Hotel</option>
						</optgroup>
						<optgroup label="Departamento">
							<option value = "raan">Atlántico Norte (RAAN)</option>
							<option value = "raas">Atlántico Sur (RAAS)</option>
							<option value = "boaco">Boaco</option>
							<option value = "carazo">Carazo</option>
							<option value = "chinandega">Chinandega</option>
							<option value = "chontales">Chontales</option>
							<option value = "esteli">Estelí</option>
							<option value = "granada">Granada</option>
							<option value = "jinotega">Jinotega</option>
							<option value = "leon">León</option>
							<option value = "madriz">Madríz</option>
							<option value = "managua">Managua</option>
							<option value = "masaya">Masaya</option>
							<option value = "matagalpa">Matagalpa</option>
							<option value = "nuevasegovia">Nueva Segovia</option>
							<option value = "riosanjuan">Río San Juan</option>
							<option value= "rivas">Rivas</option>
						</optgroup>
						<optgroup label="Comida">
							<option value="national">Nacional</option>
							<option value="foreign">Extranjera</option>
							<option value="fast">Rapida</option>
						</optgroup>
						<optgroup label="Música">
							<option value="national">Nacional</option>
							<option value="rock">Rock</option>
							<option value="electronic">Electr&oacute;nica</option>
							<option value="salsa">Salsa</option>
							<option value="reggaeton">Reggaeton</option>
						</optgroup>
						<optgroup label="Actividades">
							<option value="dance">Bailar</option>
							<option value="drink">Solo tomar y conversar</option>
							<option value="listenmusic">Escuchar buena m&uacute;sica</option>
						</optgroup>
						<optgroup label="Cultural">
							<option value="movies">Cine</option>
							<option value="theater">Teatro</option>
						</optgroup>
					</select>
					<button class="btn btn-default" type="button" ng-click="add()"><i class="fa fa-plus"></i></button>
					<div class="col-xs-12">
						<ul>
							<li ng-repeat="filter in place.filters">{{filter}}</li>
						</ul>
					</div>
				</div>
			</div>
			<div class="form-group">
				<div class="col-sm-offset-2 col-sm-10">
					<button type="submit" class="btn btn-default">Guardar</button>
					<button type="button" ng-click="view=1" class="btn btn-danger">Cancelar</button>
				</div>
			</div>
			</form>
	</div>
</div>