<div class="row" ng-controller="cateogoryAdminController">
	<h2>Categorias</h2>
	<div class="col-xs-12" ng-show="view==1">
		<button class="btn btn-primary pull-right" ng-click="newcategory()">Nuevo</button>
		<table class="table table-bordered table-hover">
			<thead>
				<tr>
					<td>Nombre</td>
					<td>Tipo</td>
					<td></td>
				</tr>
			</thead>
			<tbody>
				<tr ng-repeat="category in categories">
					<td>{{category.name}}</td>
                    <td>{{category.type}}</td>
					<td>
						<button class="btn btn-success" ng-click="edit(category)"><i class="fa fa-edit"></i></button>
					</td>
				</tr>
				<tr ng-if="categories.length == 0">
					<td colspan="3">A&uacute;n no se han agregado categorias</td>
				</tr>
			</tbody>
		</table>
	</div>
	<div class="col-xs-12" ng-show="view==2">
		<div class="alert alert-success" role="alert" id="message" style="display: none">
			<button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
		{{message}}
		</div>
		<form class="form-horizontal" ng-submit="save()">
			<legend>Categoria</legend>
			<div class="form-group">
				<label for="description" class="col-sm-2 control-label">Nombre</label>
				<div class="col-sm-10">
					<input class="form-control" ng-model="category.name" required id="name" placeholder="Nombre">
				</div>
			</div>
			<div class="form-group">
				<label for="filter" class="col-sm-2 control-label">Tipo</label>
				<div class="col-sm-8">
					<select class="form-control" ng-model="category.type">
						<option value="gallery">Galeria</option>
						<option value="article">Articulo</option>
					</select>
				</div>
			</div>
			<div class="form-group">
				<div class="col-sm-offset-2 col-sm-10">
					<button type="submit" class="btn btn-default">Guardar</button>
					<button type="button" ng-click="view=1" class="btn btn-danger">Cancelar</button>
				</div>
			</div>
			</form>
	</div>
</div>